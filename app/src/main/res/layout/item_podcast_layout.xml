<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingLeft="2dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:elevation="100dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pod_gradient_layout"
        android:layout_width="115dp"
        android:elevation="20dp"
        android:layout_height="160dp"
        android:background="@drawable/podcast_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_podcast"
            android:layout_width="58dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:cropToPadding="true"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/login_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_podcast_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppins"
            android:text="Don Dabio"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/img_podcast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_podcast" />

        <TextView
            android:id="@+id/tv_podcast_subheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thousand Faces"
            android:textSize="10sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/light_grey"
            android:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="@+id/tv_podcast_header"
            app:layout_constraintStart_toStartOf="@+id/tv_podcast_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_podcast_header" />

        <TextView
            android:id="@+id/tv_podcast_header1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="5dp"
            android:text="275,269"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_podcast_subheader" />

        <TextView
            android:id="@+id/tv_podcast_subheader1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Monthly Listeners"
            android:textColor="@color/light_grey"
            android:layout_marginStart="5dp"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_podcast_header1" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>